<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

<LinearLayout
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/app_bar"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/btn_settings"
        android:background="@color/final_gray"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:tint="#B5B5B5" />
    <TextView
        android:id="@+id/tv_top_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 00"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:layout_weight="1"
        android:textSize="22sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:transitionName="iv_profile_trans"
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_marginEnd="10dp"
        android:layout_height="35dp"
        android:src="@color/white"/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/home_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tv_user_welcome"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, User Name"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/main"/>
    <TextView
        android:id="@+id/tv_task_no"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task 00"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_round_yellow"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/main"/>
    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_day"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:progressView_radius="30dp"
        app:progressView_colorProgress="@color/white"
        app:progressView_colorBackground="#252525"
        app:progressView_progress="0"
        app:progressView_max="10"
        app:progressView_min="0"/>
    <TextView
        android:id="@+id/tv_days_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textSize="13sp"
        android:textAlignment="viewEnd"
        android:fontFamily="@font/main"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="00 Days Left "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/main"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Problem Statement"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_current_problem"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/main"
            android:textColor="@color/white"
            android:text="Counter App: Make an app to show increment of numbers. With every click on the button, the counter should increase."/>
    </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <TextView
        android:id="@+id/btn_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manuals"
        android:background="@drawable/btn_bg_round_blue"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/main"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/btn_submission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:background="@drawable/btn_bg_round_red"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/main"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/main"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Previous Tasks"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task II"
                android:textSize="18sp"
                android:layout_weight="1"
                android:fontFamily="@font/main"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/main"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/btn_bg_round_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="verified"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task I"
                android:textSize="18sp"
                android:layout_weight="1"
                android:fontFamily="@font/main"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/main"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/btn_bg_round_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_help"
            android:layout_width="wrap_content"
            android:layout_gravity="end|bottom"
            app:backgroundTint="@color/white"
            android:src="@drawable/ic_help"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>