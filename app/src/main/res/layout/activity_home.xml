<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

<LinearLayout
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/app_bar"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/btn_settings"
        android:background="@color/final_gray"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:tint="#B5B5B5" />
    <TextView
        android:id="@+id/tv_top_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 00"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:layout_weight="1"
        android:textSize="20sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:transitionName="iv_profile_trans"
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_marginEnd="10dp"
        android:layout_height="35dp"
        android:src="@color/white"/>
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            app:lottie_loop="true"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/ic_back"
            app:lottie_autoPlay="true"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/home_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tv_user_welcome"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, User Name"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/main"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_task_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task 00"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_round_green"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/main"/>
                <TextView
                    android:id="@+id/tv_task_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/white"
                    android:fontFamily="@font/main"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
    <com.skydoves.progressview.ProgressView
        android:id="@+id/progress_day"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:progressView_radius="30dp"
        app:progressView_colorProgress="@color/white"
        app:progressView_colorBackground="#252525"
        app:progressView_progress="0"
        app:progressView_max="10"
        app:progressView_min="0"/>
    <TextView
        android:id="@+id/tv_days_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textSize="13sp"
        android:textAlignment="viewEnd"
        android:fontFamily="@font/main"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:text="00 Days Left "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/main"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Problem Statement"/>
            <LinearLayout
                android:id="@+id/btn_show_home_ll"
                android:background="@drawable/accordian_bg_top_round"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/main"
                    android:id="@+id/tv_title_home"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="loading"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_show_home"
                    android:scaleType="center"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_up"
                    android:layout_height="30dp"
                    app:tint="@color/white" />
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/accordian_bg_text"
                android:visibility="visible"
                android:id="@+id/tv_more_home"
                android:textSize="15sp"
                android:fontFamily="@font/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:background="@drawable/btn_bg_round_purple"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/main"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"/>

    <TextView
        android:id="@+id/btn_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF Files"
        android:background="@drawable/btn_bg_round_blue"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/main"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"/>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/btn_submission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:background="@drawable/btn_bg_round_red"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/main"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_hide_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/main"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Previous Tasks"/>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/tv_hide2_previous"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task II"
                android:textSize="18sp"
                android:layout_weight="1"
                android:fontFamily="@font/main"/>
            <TextView
                android:id="@+id/tv_hide2_previous_status"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/main"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/btn_bg_round_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="verified"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/tv_hide1_previous"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task I"
                android:textSize="18sp"
                android:layout_weight="1"
                android:fontFamily="@font/main"/>
            <TextView
                android:id="@+id/tv_hide1_previous_status"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/main"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/btn_bg_round_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textSize="18sp"
                android:fontFamily="@font/main"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:text="New Features"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/btn_placements"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/basic_round">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/job"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="Placements"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/main"/>
                </LinearLayout>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/btn_feed"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/basic_round">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/blog"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="Feed"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/main"/>
                </LinearLayout>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_help"
            android:text="Help"
            android:textAllCaps="false"
            android:fontFamily="@font/main"
            android:textSize="15dp"
            android:layout_width="110dp"
            android:layout_gravity="end|bottom"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_help"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>