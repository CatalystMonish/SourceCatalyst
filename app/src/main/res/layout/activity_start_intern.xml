<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartInternActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cat_lottie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ic_cat"
        app:lottie_autoPlay="true"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:visibility="gone"
    android:id="@+id/start_intern_ll"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:text="Start your Internship!"
    android:fontFamily="@font/main"
    android:textColor="@color/white"
    android:textSize="25sp"
    android:layout_marginTop="50dp"
    android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                app:cardBackgroundColor="#565656"
                android:layout_height="80sp"
                android:layout_margin="10sp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/iv_intern_start"
                    android:layout_gravity="center"
                    android:layout_width="100sp"
                    android:layout_height="60sp"
                    android:src="@drawable/ic_python"/>
            </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_intern_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python Development"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/main"/>
    <TextView
        android:id="@+id/tv_intern_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Level"
        android:textSize="15sp"
        android:textColor="@color/text_grey"
        android:fontFamily="@font/main"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 days"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/btn_bg_round_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/main"/>

</LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Task I"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_task1_bg"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stroke_round"/>
        <TextView
            android:id="@+id/tv_task1"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/main"
            android:textColor="@color/white"
            android:text="Loading.."/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#323232"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_task2_bg"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stroke_round"/>
        <TextView
            android:id="@+id/tv_task2"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/main"
            android:textColor="@color/white"
            android:text="Loading.."/>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_date_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Today"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_intern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Today"
        android:padding="10dp"
        android:fontFamily="@font/main"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg_round"/>
</LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</LinearLayout>