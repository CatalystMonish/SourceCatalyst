<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartInternActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cat_lottie"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ic_gradient"
        app:lottie_autoPlay="true"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:visibility="visible"
    android:id="@+id/start_intern_ll"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:text="Start your Internship!"
    android:fontFamily="@font/main"
    android:textColor="@color/white"
    android:textSize="25sp"
    android:layout_marginTop="50dp"
    android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                app:cardBackgroundColor="#565656"
                android:layout_height="80sp"
                android:layout_margin="10sp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/iv_intern_start"
                    android:layout_gravity="center"
                    android:layout_width="100sp"
                    android:layout_height="60sp"
                    android:src="@drawable/ic_python"/>
            </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_intern_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python Development"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/main"/>
    <TextView
        android:id="@+id/tv_intern_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Level"
        android:textSize="15sp"
        android:textColor="@color/text_grey"
        android:fontFamily="@font/main"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 days"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/btn_bg_round_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/main"/>

</LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Task I"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>
    <LinearLayout
        android:id="@+id/btn_show1_ll"
        android:background="@drawable/accordian_bg"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:buttonTint="#1E9350"
            android:id="@+id/rb_task1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/main"
            android:id="@+id/tv_title1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="loading"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
          android:id="@+id/btn_show1"
            android:scaleType="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_down"
            app:tint="@color/white" />
    </LinearLayout>
    <TextView
       android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/accordian_bg_text"
        android:visibility="gone"
        android:id="@+id/tv_more1"
        android:textSize="16sp"
        android:fontFamily="@font/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/btn_show2_ll"
        android:background="@drawable/accordian_bg"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:buttonTint="#1E9350"
            android:id="@+id/rb_task2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/main"
            android:id="@+id/tv_title2"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="loading"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:id="@+id/btn_show2"
            android:scaleType="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_down"
            app:tint="@color/white" />
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/accordian_bg_text"
        android:visibility="gone"
        android:id="@+id/tv_more2"
        android:textSize="16sp"
        android:fontFamily="@font/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_date_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Today"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_intern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Today"
        android:padding="10dp"
        android:fontFamily="@font/main"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg_round_green"/>
</LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</LinearLayout>