<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                app:cardBackgroundColor="#565656"
                android:layout_height="80sp"
                android:layout_margin="10sp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/re_course_img"
                    android:layout_gravity="center"
                    android:layout_width="100sp"
                    android:layout_height="60sp"
                    android:src="@drawable/ic_python"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/re_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Development"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/main"/>
                <TextView
                    android:id="@+id/re_tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Level"
                    android:textSize="15sp"
                    android:textColor="@color/text_grey"
                    android:fontFamily="@font/main"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/re_tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 days"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/btn_bg_round_blue"
                    android:textColor="@color/white"
                    android:fontFamily="@font/main"/>
                    <TextView
                        android:id="@+id/re_tv_certificate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:text="date"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="#787878"
                        android:fontFamily="@font/main"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#5C5C5C"
        app:cardCornerRadius="10dp"
        android:layout_gravity="end"
        android:layout_marginTop="-30dp"
        android:translationZ="-1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/re_tv_status"
            android:fontFamily="@font/main"
            android:textColor="@color/white"
            android:paddingTop="30dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ongoing"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>