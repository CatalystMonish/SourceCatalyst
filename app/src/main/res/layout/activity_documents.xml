<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_back_docs"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="Documents"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_clear_24"
            app:tint="@color/black" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_download"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#DCDCDC"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            app:cardBackgroundColor="#B1B1B1"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:src="@drawable/pdf"
                android:layout_gravity="center"
                android:layout_width="80sp"
                android:layout_height="40sp"/>
        </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_doc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Cheatsheet"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main"/>
                <TextView
                    android:id="@+id/tv_status_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not downloaded"
                    android:textSize="15sp"
                    android:textColor="@color/final_gray"
                    android:fontFamily="@font/main"/>

            </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/icon_cloud"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_cloud"
                    app:tint="#B1B1B1" />
                <TextView
                    android:id="@+id/tv_num_prog_1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/main"
                    android:textSize="12sp"
                    android:text="0%"
                    android:textColor="@color/white"/>
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cpb_progress_max="100"
                app:cpb_progress="0"
            android:visibility="gone"
                app:cpb_background_progressbar_color="#4C4C4C"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#2CD333"
                app:cpb_progressbar_width="5dp"
                app:cpb_round_border="true" />
            </FrameLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>