<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PlacementsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_placements"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="Placements"
            android:textColor="@color/black"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#313131"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:backgroundTint="#DCDCDC"
                android:background="#313131"
                android:padding="10dp"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/orena"/>
                </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orena Solutions"
                            android:textColor="@color/black"
                            android:fontFamily="@font/main"
                            android:textSize="18sp"/>
                        <TextView
                            android:textColor="#5A5A5A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orena Solutions is a visionary ICT company, headquartered in ..."
                            android:fontFamily="@font/main"
                            android:textSize="16sp"/>
                    </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/main"
                android:textSize="16sp"
                android:background="@drawable/btn_bg_bottom_round"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="View Details"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Learn how to become our patner?"
        android:fontFamily="@font/main"
        android:textColor="#686868"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"/>
</LinearLayout>