<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".AllDocsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_back_all_docs"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="Documents"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_task_docs"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            app:cardBackgroundColor="#565656"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:src="@drawable/ic_folder"
                android:layout_gravity="center"
                android:layout_width="80sp"
                android:layout_height="40sp"/>
        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Documents"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cheatsheets"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="60sp"
                app:cardBackgroundColor="#565656"
                android:layout_height="60sp"
                android:layout_margin="10sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:src="@drawable/ic_folder"
                    android:layout_gravity="center"
                    android:layout_width="80sp"
                    android:layout_height="40sp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Cheatsheets"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>