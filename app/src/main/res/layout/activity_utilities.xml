<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UtilitiesActivity">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_tools"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Back"
            android:textColor="@color/white"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_certificate"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#474747">

                <TextView
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_profile_line"
                    android:drawableTint="@color/white"
                    android:text="Verifiy Certificate"
                    android:fontFamily="@font/main"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_help_tools"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#474747">

        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_user_voice_line"
            android:drawableTint="@color/white"
            android:text="Find Help"
            android:fontFamily="@font/main"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diagnostics"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#474747">

        <TextView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Diagnostics"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_pulse"
            android:drawableTint="@color/white"
            android:fontFamily="@font/main"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find us at"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/cv_logout"
        android:background="@drawable/logout_bar"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/text_grey"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Logout"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_logout"
            android:drawableTint="@color/white"
            android:fontFamily="@font/main"/>

    </LinearLayout>
</LinearLayout>