<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".SubmissionActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_celb"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/ic_confetti"
        app:lottie_autoPlay="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/tv_submission_title"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Submission"
            android:textColor="@color/white"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_text_github"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_question"
        android:layout_height="wrap_content"
        android:text="Github Repository Link"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/et_github_link"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:textColorHint="@color/text_grey"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/main"
        android:background="@drawable/et_bg"
        android:hint="Enter Link Here!"/>
    <TextView
        android:id="@+id/rating_text"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate your Experience"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <com.willy.ratingbar.ScaleRatingBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/simpleRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_numStars="5"
        app:srb_minimumStars="1"
        app:srb_rating="0"
        android:layout_marginStart="30dp"
        app:srb_starWidth="25dp"
        app:srb_starHeight="25dp"
        app:srb_drawableEmpty="@drawable/ic_star_line"
        app:srb_drawableFilled="@drawable/ic_star_fill"
        app:srb_starPadding="5dp"
        app:srb_stepSize="1"
        android:layout_marginTop="10dp"
        app:srb_isIndicator="false"
        app:srb_clickable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_submission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg_round_red"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>