<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/re_card_doc"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="60sp"
                app:cardBackgroundColor="#565656"
                android:layout_height="60sp"
                android:layout_margin="10sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:src="@drawable/pdf"
                    android:layout_gravity="center"
                    android:layout_width="80sp"
                    android:layout_height="40sp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/re_tv_doc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python Cheatsheet"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/main"/>
                <TextView
                    android:id="@+id/re_tv_doc_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not downloaded"
                    android:textSize="15sp"
                    android:textColor="@color/text_grey"
                    android:fontFamily="@font/main"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/re_frame_docs"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/re_btn_cloud"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_cloud"
                        app:tint="@color/white" />
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cpb_progress_max="100"
                        app:cpb_progress="0"
                        android:id="@+id/re_progress"
                        android:visibility="gone"
                        app:cpb_background_progressbar_color="#4C4C4C"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#258E29"
                        app:cpb_progressbar_width="5dp"
                        app:cpb_round_border="true" />
                    <TextView
                        android:id="@+id/re_download_prog"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/main"
                        android:textSize="12sp"
                        android:text="0%"
                        android:textColor="@color/white"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>