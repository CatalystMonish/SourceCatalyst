<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/re_card_doc"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#313131"
        android:layout_height="wrap_content">
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            app:cardBackgroundColor="#565656"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/resource_type_icon"
                android:src="@drawable/pdf"
                android:layout_gravity="center"
                android:layout_width="80sp"
                android:layout_height="40sp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/re_tv_doc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python Cheatsheet"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/main"/>
            <TextView
                android:id="@+id/re_tv_doc_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not downloaded"
                android:textSize="15sp"
                android:textColor="@color/text_grey"
                android:fontFamily="@font/main"/>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>