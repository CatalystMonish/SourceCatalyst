<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EndedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cross_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_clear_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="Internship Ended"
            android:textColor="@color/white"
            android:fontFamily="@font/main"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        android:layout_width="300dp"
        android:scaleType="fitCenter"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/ic_end" />
    <TextView
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20sp"
        android:layout_margin="20sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Certificate and other documents will be emailed to you soon!"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_end_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:background="@drawable/btn_bg_round_blue"
        android:fontFamily="@font/main"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
</LinearLayout>